@_exported import Foundation


/// Use this class to express macOS-specific geometry preferences when calling `-[UIWindowScene requestGeometryUpdateWithPreferences:errorHandler:]`
@available(swift, obsoleted: 3, renamed: "UIWindowSceneGeometryPreferences.Mac")
typealias UIWindowSceneGeometryPreferencesMac = UIWindowScene.GeometryPreferences.Mac
extension UIWindowScene.GeometryPreferences {

  /// Use this class to express macOS-specific geometry preferences when calling `-[UIWindowScene requestGeometryUpdateWithPreferences:errorHandler:]`
  @_nonSendable(_assumed) class Mac : UIWindowScene.GeometryPreferences {
    init()
    convenience init(systemFrame: CGRect)

    /// The preferred system frame in the system scale where an origin of (0, 0) corresponds to the top-left
    /// corner of the main display. Defaults to CGRectNull to indicate no preference.
    var __systemFrame: CGRect
  }
}
